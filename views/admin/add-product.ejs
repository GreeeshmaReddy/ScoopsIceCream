<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %> </title>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <% include adminHeader %> 

    <% if(success != "") { %>
        <div class="alert alert-success">
          <strong>Success!</strong> <%= success %> 
         <% } %>
        </div>
<div class="container" style="width:50%">
    <a class="btn btn-info" href="/admin/ViewProduct" >View Products</a>

  <h2 style="text-align: center;">Add product</h2>
  <div style=" text-align: center;">
  </div>
  <form class="form-group" action="/admin/add-product" method="post"  enctype="multipart/form-data">

    <div class="form-group">
      <input type="text" class="form-control" placeholder="Product Name" name="product" required>
    </div>

    <div class="form-group">
      <label for="categorydetails" class="col-md-3 control-label">Product Details</label>
      <div class="col-md-9">
        <textarea type="text" class="form-control" name="productdetails" placeholder=" Enter Details" id="editor" cols="30" rows="10"></textarea>
      </div>
    </div>

    <div class="form-group">
        <label for="categoryprice" class="col-md-3 control-label">Product Price</label>
        <div class="col-md-9">
        <input type="text" class="form-control" placeholder="Price" name="price" required>
         </div>
    </div>

    <div>
        <label for="categoryselect" class="col-md-3 control-label">Category</label>
        <div class="col-md-9">
        <select class="form-control" name="category" >
            <% categoryRecord.forEach(function(data){%>
                <option value="<%= data.name %>"><%= data.name %></option>
            <% }) %>
        </select>
        </div>
    </div>

    <div class="form-group">
        <label for="icode" class="col-md-3 control-label" > Brand Image</label>
        <!-- <div class="col-md-9"> -->
            <input type="file" class="form-control" name="file" multiple required>
        <!-- </div> -->
    </div> 

    <br>
        <div class="col-md-offset-3 col-md-9">
         <input type="submit" name="submit" value="submit" class="btn btn-primary">   
        </div>  
    </form>
</div>

</body>
</html>
