<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= title %> </title>
    <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <% include adminHeader %> 

    <% if(success != "") { %>
        <div class="alert alert-success">
          <strong>Success!</strong> <%= success %> 
         <% } %>
        </div>
<div class="container">
    <a class="btn btn-info" href="/admin/ViewProduct" >View Product</a>

  <h2 style="text-align: center;">Update Product</h2>
  <div style=" text-align: center;">
  </div>
  <form class="form-inline" action="/admin/update-product/<%= productRecord._id %> " method="post"  enctype="multipart/form-data">

    <input type="hidden" name="id" value="<%= productRecord._id %> ">

    <div class="form-group">
      <input type="text" class="form-control" placeholder="Product Name" name="product" value="<%= productRecord.product %>"  required>
    </div>

      <div class="form-group">
                  <label for="categorydetails" class="col-md-3 control-label">Product Details</label>
                  <div class="col-md-9">
                    <textarea type="text" class="form-control" name="categorydetails" placeholder=" Enter Details" id="editor" cols="30" rows="10"><%= productRecord.details %></textarea>
                  </div>
              </div>

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Price" name="price" value="<%= productRecord.price %>" required>
    </div>

    <div class="col-md-9">
        <select class="form-control" name="category" >
            <% categoryRecord.forEach(function(data){%>
            <option value="<%= data.name %>" <% if(data.name == productRecord.category) {%>selected<%}%>><%= data.name %></option>
            <% }) %>   
        </select>
    </div>

    <br>
        <div class="col-md-offset-3 col-md-9">
         <input type="submit" name="submit" value="Update Product" class="btn btn-primary">   
        </div>  
    </form>
</div>

</body>
</html>
